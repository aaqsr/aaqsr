{
    "name": "awabq-site",
    "version": "1.0.0",
    "description": "Personal website",
    "scripts": {
        "build": "npm-run-all clean build:*",
        "build:11ty": "eleventy",
        "build:css": "postcss src/css/index.css -o _site/css/index.css",
        "dev": "npm-run-all clean build:css --parallel dev:*",
        "dev:11ty": "eleventy --serve --port=3000",
        "dev:css": "postcss src/css/index.css -o _site/css/index.css --watch",
        "clean": "rm -rf _site",
        "deploy": "npm run build && gh-pages -d _site",
        "debug": "npm run clean && npm run build:css && npm run dev:11ty"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@tailwindcss/postcss": "^4.1.13",
        "@types/bun": "latest",
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.1.1",
        "gh-pages": "^6.3.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.1",
        "tailwindcss": "^4.1.13"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aaqsr/aaqsr.git"
    }
}
